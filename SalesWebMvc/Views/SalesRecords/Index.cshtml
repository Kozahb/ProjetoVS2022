@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div class="mb-3">
                    <label for="minDate" class="form-label">Min Date</label>
                    <input type="date" id="minDate" name="minDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="maxDate" class="form-label">Max Date</label>
                    <input type="date" id="maxDate" name="maxDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping Search</legend>
                <div class="mb-3">
                    <label for="minDate" class="form-label">Min Date</label>
                    <input type="date" id="minDate" name="minDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="maxDate" class="form-label">Max Date</label>
                    <input type="date" id="maxDate" name="maxDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>